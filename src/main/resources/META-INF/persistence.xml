<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="hibernate-postgresql"> <!--transaction-type="RESOURCE_LOCAL">-->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.example.modelo.Cliente</class>
        <class>org.example.modelo.Evento</class>
        <class>org.example.modelo.Convidado</class>
        <class>org.example.modelo.Localizacao</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/xxx" />
            <property name="jakarta.persistence.jdbc.user" value="xxx" />
            <property name="jakarta.persistence.jdbc.password" value="xxx" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />

            <!--coisa importante: a properties "hibernate.show_sql" e "hibernate.format_sql" fazem o Hibernate imprimir um log bem grande cada vez que ele é usado (isso deixa as telas console feias pra caramba)-->
            <!--se quiser manter assim mesmo, só deixar elas como true-->
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.hbm2ddl.auto" value="update" /> </properties>
    </persistence-unit>
</persistence>